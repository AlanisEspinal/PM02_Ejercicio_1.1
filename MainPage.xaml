<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM02_Ejercicio_1._1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Turquoise" Padding="16" CornerRadius="1">
            <Label Text="CALCULADORA" HorizontalTextAlignment="Start" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry Keyboard="Numeric"
               Placeholder="Ingrese un número"
               VerticalOptions="Start" x:Name="num1"/>

        <Entry Keyboard="Numeric"
               Placeholder="Ingrese un número"
               VerticalOptions="Start" x:Name="num2"/>
        
        <StackLayout Spacing="5">
            <Button x:Name="btnsuma" Margin="4" Text="Sumar" Clicked="btnsuma_Clicked" />

            <Button x:Name="btnresta" Margin="4" Text="restar" Clicked="btnresta_Clicked" />

            <Button x:Name="btnmulti" Margin="4" Text="Multiplicar" Clicked="btnmulti_Clicked" />

            <Button x:Name="btnDivi" Margin="4" Text="Dividir" Clicked="btnDivi_Clicked" />

        </StackLayout>
        

    </StackLayout>

</ContentPage>
